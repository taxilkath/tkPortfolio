{
  "name": "your-website",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/your-website.git"
  },
  "author": "Your Name <your-email@domain.com> (https://github.com/yourusername/)",
  "type": "module",
  "scripts": {
    "build": "cross-env CI=true turbo build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:mdx": "turbo build:mdx",
    "build:packages": "turbo build --filter=./packages/*",
    "check": "turbo lint && turbo type-check && pnpm format:check && pnpm check:spelling && pnpm check:knip",
    "check:knip": "dotenv -e .env.local -- knip",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --unique",
    "clean": "turbo clean && rm -rf .turbo coverage",
    "cz": "cross-env NODE_OPTIONS='--experimental-transform-types --disable-warning ExperimentalWarning' czg",
    "db:check": "turbo db:check",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "db:reset": "turbo db:reset",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=@taxilkath/docs",
    "dev:packages": "turbo dev --filter=./packages/*",
    "dev:web": "turbo dev --filter=@taxilkath/web",
    "format:check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:write": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "preinstall": "npx --yes only-allow pnpm",
    "lint": "turbo lint && eslint . --max-warnings 0",
    "lint:fix": "turbo lint:fix && eslint --fix .",
    "prepare": "husky && pnpm build:packages",
    "release": "changeset publish",
    "test:e2e": "turbo test:e2e",
    "test:e2e:inspector": "turbo test:e2e:inspector",
    "test:e2e:install": "playwright install",
    "test:e2e:ui": "turbo test:e2e:ui",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest --coverage --ui",
    "test:unit:ui": "vitest --ui",
    "type-check": "turbo type-check",
    "version": "changeset version"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix",
    "**/*": [
      "prettier --write --ignore-unknown",
      "pnpm check:spelling"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/dict-redis": "^1.0.5",
    "@playwright/test": "^1.52.0",
    "@taxilkath/prettier-config": "workspace:*",
    "@taxilkath/tsconfig": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.2.1",
    "@vitest/ui": "^3.2.1",
    "cross-env": "^7.0.3",
    "cspell": "^9.0.2",
    "czg": "^1.11.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.60.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.18",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "ts-morph": "^26.0.0",
    "tsdown": "^0.12.9",
    "tsx": "^4.19.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "core-js",
      "core-js-pure",
      "esbuild",
      "sharp"
    ]
  }
}
